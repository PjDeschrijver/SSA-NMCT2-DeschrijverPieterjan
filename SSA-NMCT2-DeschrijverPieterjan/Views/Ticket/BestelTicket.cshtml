
@model SSA_NMCT2_DeschrijverPieterjan.Models.Ticket

@{
    ViewBag.Title = "BestelTicket";
}

<h2>BestelTicket</h2>

@using (Html.BeginForm("BestelTicket", "Ticket", FormMethod.Post, new { enctype = "multipart/form-data"}))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ticket</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TicketHolder)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TicketHolder)
            @Html.ValidationMessageFor(model => model.TicketHolder)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TicketHolderEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TicketHolderEmail)
            @Html.ValidationMessageFor(model => model.TicketHolderEmail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TicketType)
        </div>
        <div class="editor-field">
           @Html.DropDownListFor(m => m.TicketType.Name, new SelectList(SSA_NMCT2_DeschrijverPieterjan.Models.DAL.TicketTypeRepository.GetTickets(), "ID"))
            @Html.ValidationMessageFor(model => model.TicketType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>
        
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
